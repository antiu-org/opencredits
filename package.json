{
  "name": "opencredits",
  "displayName": "OpenCredits",
  "description": "Monitor OpenRouter API credits in VS Code status bar",
  "version": "1.0.1",
  "publisher": "antiu",
  "icon": "logo.jpeg",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "openrouter",
    "credits",
    "api",
    "status",
    "monitoring"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opencredits.refresh",
        "title": "Refresh Credits",
        "category": "OpenCredits"
      },
      {
        "command": "opencredits.configure",
        "title": "Configure Providers",
        "category": "OpenCredits"
      }
    ],
    "configuration": {
      "title": "OpenCredits",
      "properties": {
        "opencredits.updateInterval": {
          "type": "string",
          "default": "5 minutes",
          "enum": [
            "1 minute",
            "5 minutes",
            "15 minutes",
            "30 minutes",
            "1 hour",
            "6 hours",
            "24 hours"
          ],
          "description": "How often to update credit information"
        },
        "opencredits.providers.openrouter.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable OpenRouter credit monitoring"
        },
        "opencredits.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show credits in status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antiu-org/opencredits.git"
  },
  "author": "Alexandru Antiu",
  "license": "CC-BY-NC-4.0",
  "bugs": {
    "url": "https://github.com/antiu-org/opencredits/issues"
  },
  "homepage": "https://github.com/antiu-org/opencredits#readme"
}
